<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="MessagesLB" HorizontalAlignment="Left" Height="241" VerticalAlignment="Top" Width="719" RenderTransformOrigin="1.389,1.516" Margin="33,36,0,0" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox x:Name="UserNameTB" HorizontalAlignment="Left" Height="23" Margin="33,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" RenderTransformOrigin="0.712,2.543" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="MessageTB" HorizontalAlignment="Left" Height="46" Margin="33,348,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="577" RenderTransformOrigin="0.748,0.311" TextChanged="TextBox_TextChanged"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="657,302,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" RenderTransformOrigin="1.388,3.55" Height="92"/>

    </Grid>
</Window>
